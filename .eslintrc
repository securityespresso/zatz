{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "semistandard",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "padded-blocks": "off",
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "^_unused"
      }
    ]
  }
}
